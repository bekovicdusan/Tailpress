{
	"name": "tailpress",
	"version": "1.0.0",
	"description": "Boilerplate WordPress theme with TailwindCSS.",
	"author": "Jeffrey van Rossum",
	"repository": {
		"type": "git",
		"url": "https://github.com/jeffreyvr/tailpress"
	},
	"theme_uri": "https://github.com/jeffreyvr/tailpress",
	"author_uri": "https://vanrossum.dev",
	"text_domain": "tailpress",
	"license": "MIT",
	"scripts": {
		"production": "NODE_ENV=production concurrently \"tailwindcss -i ./resources/css/app.css -o ./css/app.css --postcss --minify\" \"npm run editor-styles\" \"./node_modules/.bin/esbuild ./resources/js/app.js --bundle --outfile=./js/app.js --minify\"",
		"dev": "NODE_ENV=development concurrently \"tailwindcss -i ./resources/css/app.css -o ./css/app.css --postcss\" \"npm run editor-styles\" \"./node_modules/.bin/esbuild ./resources/js/app.js --bundle --outfile=./js/app.js\"",
		"watch": "NODE_ENV=development concurrently \"tailwindcss -i ./resources/css/app.css -o ./css/app.css --watch --postcss\" \"./node_modules/.bin/esbuild ./resources/js/app.js --bundle --outfile=./js/app.js --watch\"",
		"browser-sync": "NODE_ENV=development browser-sync start --proxy \"tailpress.test\" --host=\"tailpress.test\" --no-inject-changes --files=\"./\"",
		"watch-sync": "NODE_ENV=development concurrently \"npm run watch\" \"npm run browser-sync\"",
		"editor-styles": "concurrently \"tailwindcss -i ./resources/css/editor-style.css -o ./css/editor-style.css --postcss --minify\""
	},
	"devDependencies": {
		"@jeffreyvr/tailwindcss-tailpress": "^0.1.0",
		"autoprefixer": "^10.2.4",
		"browser-sync": "^2.26.14",
		"concurrently": "^6.2.1",
		"cross-env": "^6.0.3",
		"esbuild": "^0.12.24",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.2.10",
		"postcss-import": "^14.0.0",
		"postcss-nested": "^5.0.3",
		"postcss-nested-ancestors": "^2.0.0",
		"resolve-url-loader": "^3.1.2",
		"tailwindcss": "^2.2.0"
	}
}
